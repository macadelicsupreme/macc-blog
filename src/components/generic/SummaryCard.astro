---
import { Image } from 'astro:assets';
import Card from "../Card.astro";


interface Props {
    title: string;
    imgSrc: ImageMetadata;
    imgAlt: string;
    description: string;
}

const { title, imgAlt, imgSrc, description } = Astro.props;
---

<Card color='white'>
    <h3 class='ptext-lg md:text-xl'>{title}</h3>
    <div class=''>
        <Image
                src={imgSrc}
                alt={imgAlt}
                width={800}
                height={400}
                class='rounded h-full w-full object-cover'
        />
    </div>
    <p>{description}</p>
    <slot />
</Card>