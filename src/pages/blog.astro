---
import { getCollection } from 'astro:content';
import BlogSummaryCard from '../components/BlogSummaryCard.astro';
import DefaultLayout from "../layouts/DefaultLayout.astro";
import BlogList from "../components/BlogList.astro";
const { title, description } = Astro.props;
// Fetch the blog collection asynchronously
const posts = await getCollection('blog');
---

<DefaultLayout title="Blog" description="***description***">
    <h2 class="text-2xl">This is where I will post about my journey learning Astro.</h2>
    <main class='bg-green p-6'>
        <BlogList posts={posts} />
    </main>
</DefaultLayout>

